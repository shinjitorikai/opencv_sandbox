{
    "tasks": [
        {
            "type": "shell",
            "label": "clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I/usr/local/include/opencv4/",
                "-std=c++11",
                "-L/usr/local/opt/opencv/lib/",
                "-lopencv_core",
                "-lopencv_highgui",
                "-lopencv_imgcodecs"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ],
    "version": "2.0.0"
}